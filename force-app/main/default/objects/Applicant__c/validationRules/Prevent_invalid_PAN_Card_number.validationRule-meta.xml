<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_invalid_PAN_Card_number</fullName>
    <active>false</active>
    <errorConditionFormula>NOT (REGEX( Pan_Card__c , &quot;[A-Za-z]{5}[0-9]{4}[A-Za_z]{1}&quot;) )</errorConditionFormula>
    <errorDisplayField>Pan_Card__c</errorDisplayField>
    <errorMessage>invalid pan card number</errorMessage>
</ValidationRule>
