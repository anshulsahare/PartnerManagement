<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Close_Date_Alert</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( IsClosed ) , CloseDate &lt;  TODAY())</errorConditionFormula>
    <errorDisplayField>CloseDate</errorDisplayField>
    <errorMessage>he close date must be today or late</errorMessage>
</ValidationRule>
